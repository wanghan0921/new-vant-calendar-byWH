/* pages/activity/calendar.wxss */

.data_left {
  width: 20px;
  height: 10px;
}

.data_right {
  width: 20px;
  height: 10px;
}

.arrow {
  display: inline-block;
  height: 44px;
  width: 50px;
  vertical-align: middle;
}

.default_date {
  text-align: center;
  line-height: 38px;
  background-color: #fff;
}

.van-calendar__weekdays {
  display: flex;
  box-shadow: 0 2px 10px rgba(125,126,128,.16);
  background-color: #fff;
}

.van-calendar__weekday {
  flex: 1;
  text-align: center;
  font-size: 12px;
  line-height: 30px;
}

.van-calendar__days {
  position: relative;
  display: flex;
  flex-wrap: nowrap;
  user-select: none;
  background-color: #fff;
}

.van-calendar__day {
  font-size: 16px;
  height: 64px;
  position: relative;
  width: 14.285%
}

.van-calendar__day,.van-calendar__selected-day {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  width: 54px;
  height: 54px;
}

.van-calendar__selected-day view {
  width: 36px;
  height: 36px;
  line-height: 36px;
  color: #fff;
  background-image: linear-gradient(128deg, #27DB94 0%, #14D2B8 100%);
  box-shadow: 0 1px 6px 0 rgba(0,197,151,0.40);
  border-radius: 27px;
}

.line_12 {
  height: 6px;
  background-color: #f4f6f9;
}

.active .van-cell, 
.active .van-cell .van-cell__value {
  color: #00C597;
}

.content {
  margin-top: 1px;
  background-color: #fff;
  width: 100%;
  padding: 0 15px;
  box-sizing: border-box;
}

.activity-item {
  padding: 15px 0;
  border-bottom: 1px solid #EFEFEF;
}

.activity-item:last-child {
  border-bottom: none;
}

.act-img {
  width: 148px;
  height: 92px;
  border-radius: 4px;
  float: left;
  margin-right: 15px;
  background-size: cover;
}

.act-title{
  color: #333333;
  overflow: hidden;  
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: 550;
  line-height: 22px;
  margin-bottom: 8px;
}

.act-status {
  padding: 2px 8px;
  border-radius: 8px;
  background: #DCF7F1;
  font-size: 12px;
  color: #00C597;
  float: right;
}

.act-date {
  font-size: 12px;
  color: #909399;
  line-height: 24px;
  margin-top: 28px;
  margin-bottom: 4px;
}

.act-address {
  font-size: 12px;
  color: #909399;
  line-height: 16px;
  overflow: hidden;  
  text-overflow: ellipsis;
  white-space: nowrap;
}

.act-type {
  width: 58px;
  height: 22px;
  background-color: rgba(0,0,0,0.5);
  color: #fff;
  border-radius: 8px 0 8px 0;
  font-size: 12px;
  text-align: center;
  line-height: 22px;
}
